alias: System - Home Assistant startup automations delayed
hide_entity: True
initial_state: True
trigger:
  - platform: homeassistant
    event: start
action:
  # Automations
  - service: automation.turn_off
    entity_id:
      - automation.fix_tracker_state
  - delay:
      seconds: 45
  - service: automation.turn_on
    entity_id:
      - automation.fix_tracker_state