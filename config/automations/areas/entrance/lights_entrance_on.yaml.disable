alias: Entrance - Lights on
hide_entity: True
initial_state: True
trigger:
  - platform: state
    entity_id: 'binary_sensor.door_window_sensor_158d00022d2c98'
    to: 'on'
  - platform: state
    entity_id: 'binary_sensor.entrance_sensor_motion'
    to: 'on'
condition:  
  - condition: time
    after: '07:00:00'
    before: '23:45:00'
action:
  - service: 'light.turn_on'
    entity_id: 'light.entrance_group'
    data:
      brightness_pct: 100